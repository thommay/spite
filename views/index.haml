- if defined?(@tag)
  %h3= "Current Tag is #{@tag}"

- @spite.each do |spite|
  %article{:class=>"spite span-24", :id=>spite[:id]}
    %div{:class=>"span-16", :id=>"note"}= spite[:contents]
    %div{:class=>"span-4", :id=>"duedate"}
      %time= spite[:duedate]
    - unless @done
      %div{:class=>"span-4 last", :id=>"done"}
        %button{:class=>'done',:object_id=>spite[:id], :onclick=>"mark_as_done(#{spite[:id]})"}Done!
    %br/
    - unless spite[:tags].empty?
      %div{:class=>"span-6 push-3", :id=>"tags"}!= spite[:tags].collect {|t| tag_link(t)}.join(', ')

